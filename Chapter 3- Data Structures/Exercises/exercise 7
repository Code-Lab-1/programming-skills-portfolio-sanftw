countries=["America","Egypt","Qatar","Bahamas"]
print('original','\n',countries)
print('\nalphabetical order')
print(sorted(countries))
print("\noriginal order")
print(countries)
print("\nreversed order")
print(sorted(countries, reverse=True))
print("\noriginal")
print(countries)
countries.reverse()
print("\nreverse order")
print(countries)
countries.reverse()
print("\noriginal order")
print(countries)
countries.sort()
print("\nalphabetical order")
print(countries)
print("\nreverse alphabetical order")
countries.sort(reverse=True)
print(countries)